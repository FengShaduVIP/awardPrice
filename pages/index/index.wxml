  <view class='award-img'>
    <view class='award-text'>
      <text>{{textValue}}</text>
    </view>
    <image src="../../images/h5award.png" style='width:100%;height:100%;'></image>
    <view class="btn_ok" bindtap="powerDrawer" data-statu="close">确定</view> 
  </view>
</view>